{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false
  },
  "include": [
    "index.ts",
    "credentials/**/*.ts",
    "nodes/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}


